<%= form_with(model: doctor, local: true) do |f| %>
  <% if doctor.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="fas fa-exclamation-circle text-red-400"></i>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(doctor.errors.count, "error") %> prohibited this doctor profile from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5">
              <% doctor.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <%= f.label :specialty, "Medical Specialty", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :specialty, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :license_number, "License Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :license_number, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :years_of_experience, "Years of Experience", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :years_of_experience, min: 0, max: 60, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="mt-8 flex justify-end">
    <%= f.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>