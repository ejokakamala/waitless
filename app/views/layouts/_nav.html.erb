<nav class="bg-blue-800 text-white shadow-lg">
<div class="container mx-auto px-4 py-3 flex justify-between items-center">
  <%= link_to root_path, class: "text-2xl font-bold flex items-center" do %>
    <i class="fas fa-heartbeat mr-2"></i> WaitLess
  <% end %>

  <div class="flex items-center space-x-4">
    <% if user_signed_in? %>
      <%= link_to "Dashboard", dashboard_path, class: "hover:text-blue-200" %>
      <% if current_user.admin? %>
        <%= link_to "Manage Doctors", manage_doctors_path, class: "hover:text-blue-200" %>
      <% end %>
      <% if current_user.doctor? %>
        <%= link_to "My Availabilities", availabilities_path, class: "hover:text-blue-200" %>
