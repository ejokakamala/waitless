<div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
  <h1 class="text-2xl font-bold text-blue-800 mb-6">Edit <%= @hospital.name %></h1>
  
  <%= form_with model: @hospital, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, "Hospital Name", class: "block text-gray-700 font-medium mb-2" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div class="mb-4">
      <%= f.label :address, "Full Address", class: "block text-gray-700 font-medium mb-2" %>
      <%= f.text_area :address, rows: 2, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div class="grid md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= f.label :phone, "Phone Number", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.telephone_field :phone, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <div>
        <%= f.label :website, "Website (optional)", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.url_field :website, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
    
    <div class="flex justify-end space-x-4 mt-6">
      <%= link_to "Cancel", hospital_path(@hospital), class: "bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300 transition duration-300" %>
      <%= f.submit "Update Hospital", class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition duration-300" %>
    </div>
  <% end %>
</div>