<div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
  <div class="flex justify-between items-start mb-6">
    <h1 class="text-2xl font-bold text-blue-800">Availability Details</h1>
    <div class="flex space-x-2">
      <%= link_to edit_availability_path(@availability), class: "bg-blue-600 text-white px-3 py-1 rounded-lg hover:bg-blue-700 transition duration-300 text-sm" do %>
        <i class="fas fa-edit mr-1"></i> Edit
      <% end %>
      <%= link_to @availability, method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-600 text-white px-3 py-1 rounded-lg hover:bg-red-700 transition duration-300 text-sm" do %>
        <i class="fas fa-trash mr-1"></i> Delete
      <% end %>
    </div>
  </div>
  
  <div class="space-y-4">
    <div>
      <h2 class="text-lg font-semibold text-gray-700">Date</h2>
      <p class="text-gray-900"><%= @availability.start_time.strftime("%A, %B %d, %Y") %></p>
    </div>
    
    <div>
      <h2 class="text-lg font-semibold text-gray-700">Time Slot</h2>
      <p class="text-gray-900"><%= @availability.start_time.strftime("%I:%M %p") %> to <%= @availability.end_time.strftime("%I:%M %p") %></p>
      <p class="text-gray-600"><%= distance_of_time_in_words(@availability.start_time, @availability.end_time) %> duration</p>
    </div>
    
    <div>
      <h2 class="text-lg font-semibold text-gray-700">Status</h2>
      <p class="<%= @availability.start_time >= Time.current ? 'text-green-600' : 'text-gray-600' %> font-medium">
        <%= @availability.start_time >= Time.current ? 'Upcoming' : 'Past' %>
      </p>
    </div>
  </div>
  
  <div class="mt-8">
    <%= link_to "Back to All Availabilities", availabilities_path, class: "bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300 transition duration-300" %>
  </div>
</div>